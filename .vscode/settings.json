
{
  "folders": [
    {
      "path": "."
    }
  ],
  "settings": {
    "typescript.preferences.noSemicolons": "off",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "files.exclude": {
      "out": false,
      "node_modules": true,
      "*.vsix": false
    }
  },
  "launch": {
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Extension",
        "type": "extensionHost",
        "request": "launch",
        "args": [
          "--extensionDevelopmentPath=${workspaceFolder}"
        ]
      }
    ]
  }
}